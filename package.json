{
  "name": "tuleap-mcp",
  "version": "1.0.0",
  "description": "MCP server for Tuleap API",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev:server": "ts-node src/index.ts",
    "dev:inspector": "mcp-inspector -- ts-node src/index.ts",
    "dev": "npx nodemon --watch src --ext ts --exec \"mcp-inspector -- ts-node src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js"
  },
  "keywords": [
    "tuleap",
    "mcp",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "dotenv": "^17.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.19.0",
    "@types/node": "^25.0.10",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
